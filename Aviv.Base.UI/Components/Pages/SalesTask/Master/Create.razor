    private async Task HandleValidSubmit()
    {
        formSubmitted = true;
        
        // Apply validation using our JS module
        var isValid = await JSRuntime.InvokeAsync<bool>("validateForm", "salesTaskForm", requiredFields);
        
        // Check if validation passed
        if (!isValid || 
            string.IsNullOrEmpty(model.TaskTitle) || 
            string.IsNullOrEmpty(model.TaskType) || model.TaskType == "--" || 
            string.IsNullOrEmpty(model.TaskPriority) || model.TaskPriority == "--" ||
            !model.DueDateTime.HasValue ||
            string.IsNullOrEmpty(model.TaskStatus) || model.TaskStatus == "--" ||
            string.IsNullOrEmpty(model.AssociatedModule) || model.AssociatedModule == "--" ||
            model.AssignedToUserId == Guid.Empty)
        {
            await NotificationService.ShowErrorAsync("Please fill in all required fields.", true);
            
            // Ensure error styling is applied to dropdowns by manually triggering CSS updates
            await JSRuntime.InvokeVoidAsync("eval", @"
                setTimeout(function() {
                    const form = document.getElementById('salesTaskForm');
                    const dropdowns = form.querySelectorAll('.e-ddl');
                    dropdowns.forEach(function(dropdown) {
                        const input = dropdown.querySelector('input');
                        const inputGroup = dropdown.querySelector('.e-input-group');
                        if (dropdown.classList.contains('error-border') && inputGroup) {
                            inputGroup.style.borderColor = '#dc3545';
                        }
                    });
                }, 50);
            ");
            
            return;
        }

        try
        {
            // Show processing notification
            await NotificationService.ShowLineToastAsync("success");

            // Create the task
            var result = await SalesTaskService.CreateSalesTaskAsync(model);

            // Show success notification
            await NotificationService.ShowSuccessAsync("Sales task created successfully!", true);

            // Navigate back to summary
