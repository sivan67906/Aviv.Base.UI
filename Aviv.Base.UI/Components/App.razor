@code {

	private AppState appState = new AppState();

	private Dictionary<string, object> htmlAttributes = new Dictionary<string, object>
	{
		{ "lang", "en" },
		{ "data-toggled", "close" }
	};

	protected override void OnInitialized()
	{

		if (!string.IsNullOrEmpty(appState?.Direction))
		{
			htmlAttributes["dir"] = appState.Direction;
		}
		if (!string.IsNullOrEmpty(appState?.NavigationStyles))
		{
			htmlAttributes["data-nav-layout"] = appState.NavigationStyles;
		}
		if (!string.IsNullOrEmpty(appState?.ColorTheme))
		{
			htmlAttributes["data-theme-mode"] = appState.ColorTheme;
		}
		if (!string.IsNullOrEmpty(appState?.HeaderColor))
		{
			htmlAttributes["data-header-styles"] = appState.HeaderColor;
		}
		if (!string.IsNullOrEmpty(appState?.MenuColor))
		{
			htmlAttributes["data-menu-styles"] = appState.MenuColor;
		}
		if (!string.IsNullOrEmpty(appState?.MenuStyles))
		{
			htmlAttributes["data-nav-style"] = appState.MenuStyles;
		}
		if (!string.IsNullOrEmpty(appState?.PageStyles))
		{
			htmlAttributes["data-page-style"] = appState.PageStyles;
		}
		if (!string.IsNullOrEmpty(appState?.WidthStyles))
		{
			htmlAttributes["data-width"] = appState.WidthStyles;
		}
		if (!string.IsNullOrEmpty(appState?.MenuPosition))
		{
			htmlAttributes["data-menu-position"] = appState.MenuPosition;
		}
		if (!string.IsNullOrEmpty(appState?.HeaderPosition))
		{
			htmlAttributes["data-header-position"] = appState.HeaderPosition;
		}
		if (!string.IsNullOrEmpty(appState?.BackgroundImage))
		{
			htmlAttributes["data-bg-img"] = appState.BackgroundImage;
		}
	}
}