@namespace Aviv.Base.UI.Components

<div class="line-toast-container">
	<div class="line-toast line-toast-success"></div>
	<div class="line-toast line-toast-error"></div>
	<div class="line-toast line-toast-warning"></div>
	<div class="line-toast line-toast-info"></div>
</div>

<style>
	/* Line Toast System Colors */
	.success-color {
		--toast-color: #28a745;
	}

	.error-color {
		--toast-color: #dc3545;
	}

	.warning-color {
		--toast-color: #ffc107;
	}

	.info-color {
		--toast-color: #17a2b8;
	}

	.line-toast-container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 3px;
		z-index: 9999;
		pointer-events: none;
	}

	.line-toast {
		position: absolute;
		height: 100%;
		width: 0;
		left: 0;
		opacity: 0.9;
	}

	.line-toast-success {
		background-color: #28a745;
		display: none;
	}

	.line-toast-error {
		background-color: #dc3545;
		display: none;
	}

	.line-toast-warning {
		background-color: #ffc107;
		display: none;
	}

	.line-toast-info {
		background-color: #17a2b8;
		display: none;
	}

	.line-toast-out {
		opacity: 0;
		transition: opacity 0.5s;
	}

	/* SVG color classes */
	.svg-primary, .svg-info {
		fill: #0d6efd;
	}

	.svg-secondary, .svg-success {
		fill: #28a745;
	}

	.svg-warning {
		fill: #ffc107;
	}

	.svg-danger, .svg-error {
		fill: #dc3545;
	}

	/* Top right alert container */
	.top-right-alert-container {
		position: fixed;
		top: 20px;
		right: 20px;
		z-index: 9999;
		width: 350px;
		max-width: 90vw;
	}

	.custom-alert-icon {
		display: flex;
		align-items: center;
		padding-right: 2.5rem;
	}

		.custom-alert-icon svg {
			margin-right: 0.75rem;
		}
</style>